                                    </div>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="validationCustom03">@Html.DisplayNameFor(model => model.NIDNumber) <span class="required">*</span></label>
                                    @Html.TextBoxFor(m => m.NIDNumber, new { @id = "validationCustom03", @class = "form-control", type = "number", @placeholder = "এনআইডি নাম্বার", @required = "required" })
                                    <div class="invalid-feedback">
                                        এনআইডি নাম্বার দেয়া বাধ্যতামূলক!
                                    </div>
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label for="validationCustom03">@Html.DisplayNameFor(model => model.GenderId) <span class="required">*</span></label><br />

                                    @for (int i = 0; i < genders.Count; i++)
                                    {
                                        if (i == 0)
                                        {
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="GenderId" id="inlineRadioGenderId'@i'" value="@genders[i].Id" checked>
                                                <label class="form-check-label" for="inlineRadioGenderId'@i'">@genders[i].Name</label>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="GenderId" id="inlineRadioGenderId'@i'" value="@genders[i].Id">
                                                <label class="form-check-label" for="inlineRadioGenderId'@i'">@genders[i].Name</label>
                                            </div>
                                        }
                                    }


                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="validationCustom03">@Html.DisplayNameFor(model => model.ReligionId) <span class="required">*</span></label><br />
                                    @for (int i = 0; i < religions.Count; i++)
                                    {
                                        if (i == 0)
                                        {
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="ReligionId" id="inlineRadioReligionId'@i'" value="@religions[i].Id" checked>
                                                <label class="form-check-label" for="inlineRadioReligionId'@i'">@religions[i].Name</label>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="ReligionId" id="inlineRadioReligionId'@i'" value="@religions[i].Id">
                                                <label class="form-check-label" for="inlineRadioReligionId'@i'">@religions[i].Name</label>
                                            </div>
                                        }
                                    }
                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="validationCustom03">@Html.DisplayNameFor(model => model.IsTubeWell) <span class="required">*</span></label><br />
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="IsTubeWell" id="inlineRadioIsTubeWellYes" value="true" checked>
                                        <label class="form-check-label" for="inlineRadioIsTubeWellYes">হ্যাঁ</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="IsTubeWell" id="inlineRadioIsTubeWellNo" value="false">
                                        <label class="form-check-label" for="inlineRadioIsTubeWellNo">না</label>
                                    </div>

                                </div>
                                <div class="col-md-4 mb-3">
                                    <label for="validationCustom03">@Html.DisplayNameFor(model => model.Sanitary) <span class="required">*</span></label><br />

                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="Sanitary" id="inlineRadioYesBuilding" value="পাকা পায়খানা">
                                        <label class="form-check-label" for="inlineRadioYesBuilding">পাকা পায়খানা</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="Sanitary" id="inlineRadioSanitaryYes" value="কাঁচা পায়খানা" checked>
                                        <label class="form-check-label" for="inlineRadioSanitaryYes">কাঁচা পায়খানা</label>
                                    </div>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="Sanitary" id="inlineRadioSanitaryNo" value="নাই">
                                        <label class="form-check-label" for="inlineRadioSanitaryNo">নাই</label>
                                    </div>
                                </div>

                                <div class="col-md-4 mb-3 inline">
