@model UPTax.Model.Models.InfraStructuralType

@{
    ViewBag.Title = "হালনাগাদ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-title-box">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h4 class="page-title mb-1">অবকাঠামোর ধরন</h4>
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">অপারেট অবকাঠামোর ধরন</a></li>
                    <li class="breadcrumb-item active">হালনাগাদ করুন</li>
                </ol>
            </div>
        </div>

    </div>
</div>

<div class="page-content-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="float-right ml-2">
                            <a class="btn btn-sm btn-warning btn-flat margin" href="@Url.Action("Index")">তালিকা দেখুন</a>
                        </div>
                        <h4 class="header-title">অবকাঠামোর ধরন হালনাগাদ ফরম</h4>
                        <p class="card-title-desc"></p>
                        @using (Html.BeginForm("Edit", "InfraStructuralType", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate", @autocomplete = "off", @enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(m => m.Id)
                            @Html.HiddenFor(m => m.CreatedBy)
                            <input type="text" name="CreateDate" value="@Model.CreatedDate.ToString("dd-mm-yyyyy")" hidden />
                            @Html.HiddenFor(m => m.IsDeleted)
                            <div class="row">
                                <div class="col-md-5 mb-3">
                                    <label for="validationCustom03">@Html.DisplayNameFor(model => model.TypeName)</label>
                                    @Html.TextBoxFor(m => m.TypeName, new { @id = "validationCustom03", @class = "form-control bangla", @placeholder = "অবকাঠামোর নাম", @maxLength = "250", @required = "required" })
                                    <div class="invalid-feedback">
                                        নাম দেয়া বাধ্যতামূলক!
                                    </div>
                                </div>

                                <div class="col-md-5 mb-3">
                                    <label for="validationCustom03">@Html.DisplayNameFor(model => model.YearlyRent)</label>
                                    @Html.TextBoxFor(m => m.YearlyRent, new { @id = "validationCustom03", @class = "form-control", @placeholder = "বাৎসরিক ভাড়া", @min = "1", @type = "number", @required = "required" })
                                    <div class="invalid-feedback">
                                        বাৎসরিক ভাড়া বাধ্যতামূলক!
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label for="validationCustom03">@Html.DisplayNameFor(model => model.InterestRate)</label>
                                    @Html.TextBoxFor(m => m.InterestRate, new { @id = "validationCustom03", @class = "form-control", @placeholder = "মুনাফার হার", @min = "0.5", @step = "0.5", @type = "number", @required = "required" })
                                    <div class="invalid-feedback">
                                        মুনাফার হার বাধ্যতামূলক!
                                    </div>
                                </div>

                            </div>
                            <button class="btn btn-primary" type="submit">হালনাগাদ করুন</button>

                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- end row -->

    </div> <!-- container-fluid -->
</div>

@section Scripts {

    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>


}
