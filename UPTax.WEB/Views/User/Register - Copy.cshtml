@model UPTax.Model.ViewModels.VMRegister
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Register</h2>

<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Create User<small>All Red marked are required</small></h2>
                <ul class="nav navbar-right panel_toolbox">

                    <li class="dropdown">

                    </li>

                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />

                @using (Html.BeginForm("Register", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()


                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="txtRoleName">
                            User Name <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @pattern = "[A-Za-z0-9 _.-]*", @title = "User name must contain only characters, numbers, underscore, hyphen, dot.", @maxLength = "100", @required = "required" })
                            @Html.ValidationMessageFor(model => model.UserName)
                        </div>
                    </div>

                    @*<div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="txtRoleName">
                                Name <span class="required">*</span>
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @pattern = "[A-Za-z .()-]*", @title = "User name must contain only characters, dot, ( ), -", @maxLength = "100", @required = "required" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>*@


                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="txtRoleName">
                            Password <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "required", @maxLength = "100", @minLength = "6", @id = "passwordMain" })
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="txtRoleName">
                            Confirm Password <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @required = "required", @maxLength = "100", @minLength = "6", @id = "passwordConfirm" })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword)
                            <span style="padding:5px;color:red;display:none;" id="warningMsg"> Password and Confirm Password didn't match.</span>
                        </div>
                    </div>

                    @*<div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="txtRoleName">
                            Employee <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">

                            @Html.DropDownList("EmployeeId", null, String.Empty, new { @class = "form-control col-md-5 col-xs-12 ddlErrorMsg" })

                        </div>
                    </div>*@

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="txtRoleName">
                            Role Name <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.DropDownListFor(m => m.RoleName, new SelectList(Model.roles, "Name", "Name"), new { @class = "form-control ddlErrorMsg" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="txtRoleName">
                            Is Active <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @Html.CheckBoxFor(model => model.IsActive, new { @class = "chkIsActive" })
                        </div>
                    </div>

                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">

                            @*@Html.ActionLink("Clear", "Create", null, new { @class = "btn btn-primary" })*@
                            <button type="submit" class="btn btn-success">Save</button>
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-danger" })

                        </div>
                    </div>



                    @*<div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-default" value="Register" />
                            </div>
                        </div>*@
                }
            </div>
        </div>
    </div>
</div>

